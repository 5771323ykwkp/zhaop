/* pages/feedback/feedback.wxss */
.feedback-page {
  min-height: 100vh;
  background-color: #f5f5f5;
	padding: 20rpx;
}

.feedback-form {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.feedback-input {
  width: 100%;
	height: 300rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
}

.reset-button, .submit-button {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.reset-button {
  background-color: #f0f0f0;
  color: #666;
}

.submit-button {
  background-color: #ff8c00;
  color: #ffffff;
}

