<!-- 注册页面设计 -->
<!-- pages/register/register.wxml -->
<view class="register-container">
  <view class="register-box">
    <text class="title">用户注册</text>
    <input class="input" placeholder="请输入用户名" placeholder-class="placeholder" />
    <input class="input" placeholder="请输入密码" password placeholder-class="placeholder" />
    <input class="input" placeholder="请确认密码" password placeholder-class="placeholder" />
    <button class="btn-register" bindtap="onRegister">注册</button>
    <view class="login-link">
      <text>已有账号？</text>
      <text class="link" bindtap="goToLogin">立即登录</text>
    </view>
  </view>
</view>