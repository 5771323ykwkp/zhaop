/* pages/Recruiter/statistics/statistics.wxss */
.statistics-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.job-list {
  padding: 20rpx;
}

.job-item {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.job-info {
  flex: 1;
}

.job-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.job-details {
  display: flex;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.job-salary {
  margin-right: 20rpx;
  color: #FF8C00;
}

.job-stats {
  display: flex;
  font-size: 24rpx;
  color: #999999;
}

.stat-item {
  margin-right: 20rpx;
}

.job-actions {
  margin-left: 20rpx;
}

/* 修改van-tabs样式 */
.van-tabs__line {
  background-color: #FF8C00 !important;
}

.van-tab--active {
  color: #FF8C00 !important;
}

/* 修改van-button样式 */
.van-button--danger {
  background-color: #ff4d4f !important;
  border-color: #ff4d4f !important;
}

.van-button--primary {
  background-color: #FF8C00 !important;
  border-color: #FF8C00 !important;
}

