.communicate-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.message-list {
  flex: 1;
  padding: 20rpx;
}

.chat-item {
  display: flex;
  align-items: center;
	padding: 30rpx;
	margin-right: 35rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar-container {
  position: relative;
  margin-right: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.status-dot {
  position: absolute;
  bottom: 5rpx;
  right: 5rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #cccccc;
  border: 2rpx solid #ffffff;
}

.status-dot.online {
  background-color: #52c41a;
}

.chat-info {
  flex: 1;
}

.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.time {
  font-size: 24rpx;
  color: #999999;
}

.chat-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.last-message {
  font-size: 28rpx;
  color: #666666;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.unread-count {
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 10rpx;
  background-color: #FF8C00;
  border-radius: 18rpx;
  color: #ffffff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 修改van-search样式 */
.van-search {
  --search-background-color: #ffffff !important;
  --search-padding: 20rpx !important;
}

.van-search__content {
  border-radius: 30rpx !important;
}

