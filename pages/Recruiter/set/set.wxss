/* pages/Recruiter/set/set.wxss */
.settings-container {
  min-height: 100vh;
  background-color: #f5f5f5;
	padding-bottom: 40rpx;
	position: fixed;
	height: 100vh;
	width: 100%;
}

.section {
  margin-bottom: 20rpx;
}

.version-info {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin: 40rpx 0;
}

.logout-button {
  padding: 0 30rpx;
}

/* Customize van-cell styles */
.van-cell-group__title {
  padding-left: 30rpx !important;
  font-size: 28rpx !important;
  color: #666 !important;
}

.van-cell {
  font-size: 28rpx !important;
}

.van-cell__value {
  color: #333 !important;
}

/* 系统退出按钮 */
.van-button--danger {
	margin-top: 50%;
  background-color: #ff4d4f !important;
  border-color: #ff4d4f !important;
}

