/* 页面容器样式 */
.page-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 自定义导航栏样式 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 44px;
  background: #FF8C00;
  display: flex;
  align-items: center;
	justify-content: center;
  z-index: 999;
}

.nav-title {
  color: black;
  font-size: 28rpx;
  font-weight: 500;
}

/* 轮播图样式 */
.banner-swiper {
  height: 300rpx;
	width: 97%;
	padding: 8rpx 10rpx 0rpx 10rpx;
}

.banner-image {
  width: 100%;
	height: 100%;
	padding: 5rpx 0 0 5rpx;
	border-radius: 20px;
}

/* 功能菜单网格样式 */
.menu-grid {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 最新动态图标 */
.icon{
	width: 40rpx;
	height: 40rpx;
	margin-top: 10rpx;
}

/* 菜单项样式 */
.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

/* 菜单图标容器样式 */
.menu-icon {
  width: 96rpx;
  height: 96rpx;
  background-color: rgba(255, 140, 0, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

/* 菜单文字样式 */
.menu-text {
  font-size: 26rpx;
  color: #333333;
}

/* 最新动态区域样式 */
.news-section {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 区域标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #FF8C00;
}

/* 最新公告列表标题 */
.title{
	margin-left: 5rpx;
}

/* 新闻列表样式 */
.news-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 新闻项样式 */
.news-item {
  display: flex;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

/* 新闻图片样式 */
.news-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

/* 新闻内容样式 */
.news-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 新闻标题样式 */
.news-title {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.4;
}

/* 新闻时间样式 */
.news-time {
  font-size: 24rpx;
  color: #999999;
}

