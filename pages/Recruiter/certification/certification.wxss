/* pages/Recruiter/certification/certification.wxss */
.certification-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.form-group {
  margin-top: 20rpx;
  background-color: #ffffff;
	padding: 10rpx 10rpx 20rpx 10rpx;
	border-radius: 5rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.upload-section {
  padding: 30rpx;
}

.upload-title {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333333;
}

.required {
  color: #ff4d4f;
  margin-right: 4rpx;
}

.upload-content {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.upload-box {
  width: 200rpx;
  height: 200rpx;
  background-color: #fafafa;
  border: 2rpx dashed #d9d9d9;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-text {
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
}

.preview-box {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-icon {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  background-color: #ff4d4f;
  color: #ffffff;
  border-radius: 50%;
  padding: 6rpx;
}

.submit-section {
  margin: 40rpx 30rpx;
}

/* 修改van-field样式 */
.van-field__label {
  color: #333333 !important;
}

/* 修改van-button样式 */
.van-button--primary {
  background-color: #FF8C00 !important;
  border-color: #FF8C00 !important;
}

