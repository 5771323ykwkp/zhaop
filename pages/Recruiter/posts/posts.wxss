/* pages/Recruiter/posts/posts.wxss */
/* 页面容器 */
.posts-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 表单区域 */
.form-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #FF8C00;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

/* 表单标签 */
.form-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

/* 必填标记 */
.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 4rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333333;
}

/* 选择器样式 */
.picker-content {
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 薪资输入区域 */
.salary-input {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.salary {
  flex: 1;
}

.salary-separator {
  color: #999999;
  font-size: 28rpx;
}

.salary-unit {
  color: #666666;
  font-size: 28rpx;
  margin-left: 10rpx;
}

/* 福利标签 */
.benefits-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.benefit-tag {
  padding: 12rpx 24rpx;
  background-color: #f9f9f9;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666666;
}

.benefit-tag.selected {
  background-color: rgba(255, 140, 0, 0.1);
  color: #FF8C00;
}

/* 提交按钮区域 */
.submit-section {
  margin: 40rpx 0;
  padding: 0 30rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FF8C00, #FF6B00);
  border-radius: 44rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
}

