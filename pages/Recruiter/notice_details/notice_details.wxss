/* 公告详情页面样式 */
.notice-detail-page {
  padding: 20rpx;
	background-color: #f5f5f5;
	min-height: 100vh;
}

/* 公告卡片样式 */
.notice-card {
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

/* 公告标题样式 */
.notice-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

/* 公告元数据样式 */
.notice-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

/* 公告类型样式 */
.notice-type {
  background-color: #e6f7ff;
  color: #1890ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

/* 公告图片样式 */
.notice-image {
  width: 100%;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

/* 公告内容样式 */
.notice-content {
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
}

/* 操作按钮容器样式 */
.notice-actions {
		position: fixed;
		bottom: 0;         /* 固定在页面底部 */
		left: 0;           /* 左边缘 */
		right: 0;          /* 右边缘 */
		background-color: white; /* 背景颜色，可以根据需求修改 */
		box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.2); /* 阴影效果，增加立体感 */
		display: flex;     /* 使用flex布局 */
		justify-content: space-between; /* 均匀分布按钮 */
		padding: 10px;     /* 内间距 */
		z-index: 1000;     /* 确保在其他元素之上 */
}

/* 操作按钮通用样式 */
.action-button {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 操作按钮图标样式 */
.action-button image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 收藏按钮样式 */
.favorite-button {
  background-color: #fff;
  color: #ff6b6b;
  border: 1px solid #ff6b6b;
}

/* 分享按钮样式 */
.share-button {
  background-color: #ff6b6b;
  color: #fff;
}

