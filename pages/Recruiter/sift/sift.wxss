.sift-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.resume-list {
  padding: 20rpx;
}

.resume-item {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.resume-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.basic-info {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.position {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.tags {
  display: flex;
  gap: 10rpx;
}

.tag {
  font-size: 24rpx;
  color: #FF8C00;
  background-color: rgba(255, 140, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.action-buttons {
  display: flex;
  gap: 10rpx;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 修改van-button样式 */
.van-button--primary {
  background-color: #FF8C00 !important;
  border-color: #FF8C00 !important;
}

.van-tab--active {
  color: #FF8C00 !important;
}

.van-tabs__line {
  background-color: #FF8C00 !important;
}

