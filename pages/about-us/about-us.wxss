/* pages/about-us/about-us.wxss */
.about-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.company-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.company-logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.company-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.company-version {
  font-size: 24rpx;
  color: #999;
}

.about-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.about-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.features-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.feature-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 20rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin: 10rpx 0;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
}

.bottom-links {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
}

.link-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.link-item van-icon {
  margin-bottom: 6rpx;
  color: #ff8c00;
}

