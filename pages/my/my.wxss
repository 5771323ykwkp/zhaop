.my-page {
  background-color:	#f5f5f5;
  min-height: 100vh;
}

.user-profile {
  background:linear-gradient(to bottom , #FF8C00,#f5f5f5);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
	position: relative;
	margin-bottom: 20rpx;
}

.avatar-container {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
}

.edit-avatar {
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.username {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

.settings-icon {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  color: #ffffff;
}

.application-status {
  background-color:#FFEFD5;
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
	margin-bottom: 20rpx;
	border-radius: 50rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.status-text {
  font-size: 24rpx;
  color: #333333;
}

.status-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF8C00;
  margin-top: 5rpx;
}

.user-actions {
  background-color: #ffffff;
	margin-bottom: 20rpx;
	border-radius: 20rpx;
	overflow:hidden;
}

.logout-button {
	padding: 30rpx;
	margin-top: 250rpx;
	color: #FF8C00;
}

