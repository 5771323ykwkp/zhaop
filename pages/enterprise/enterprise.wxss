/* 页面整体样式 */
.enterprise-page {
  min-height: 100vh;
  background-color:#f5f5f5;
}

/* 总数显示样式 */
.total-count {
	padding: 15rpx;
  font-size: 30rpx;
	color: black;
	text-align: center;
}

/* 搜索框样式 */
.search-container{
	position: sticky;
	top: 0;
	z-index: 100;
}
/* 企业列表样式 */
.enterprise-list {
  padding: 0 20rpx;
}

/* 企业卡片样式 */
.enterprise-card {
  background-color:#FFFFFF;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 卡片头部样式 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 企业logo样式 */
.enterprise-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #fff;
}

/* 企业信息区域样式 */
.enterprise-info {
  flex: 1;
}

/* 企业名称样式 */
.enterprise-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

/* 企业规模和类型样式 */
.enterprise-meta {
  font-size: 24rpx;
  color: #666;
}

/* 卡片内容区域样式 */
.card-content {
	border-top: 1rpx solid rgba(0, 0, 0, 0.1);
	/* border-top: 1rpx solid black; */
  padding-top: 20rpx;
}

/* 信息项样式 */
.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #666;
}

/* 图标样式 */
.icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

/* 标签容器样式 */
.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 标签样式 */
.tag {
  font-size: 24rpx;
  color: #ff8c00;
  background-color: rgba(255, 140, 0, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

