.favorites-page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.favorite-list {
  padding: 20rpx;
}

.favorite-item {
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.favorite-content {
  flex: 1;
}

.favorite-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.favorite-date,
.favorite-company,
.favorite-industry {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 5rpx;
  display: block;
}

.favorite-salary {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.favorite-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.favorite-actions {
  display: flex;
  align-items: center;
}

.favorite-actions van-icon {
  margin-left: 20rpx;
}

