/* pages/help-center/help-center.wxss */
.help-page {
	min-height: 100vh;
  background-color: #f5f5f5;
	padding: 20rpx;
	position: fixed;
}

.help-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.question-list {
  margin-bottom: 20rpx;
}

.question-item {
  border-bottom: 1px solid #f0f0f0;
  padding: 20rpx 0;
}

.question-item:last-child {
  border-bottom: none;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.question-text {
  font-size: 28rpx;
  color: #333;
}

.question-answer {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
  padding: 10rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.contact-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.contact-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.contact-item van-icon {
  margin-right: 10rpx;
  color: #ff8c00;
}

.feedback-button {
	margin-top: 40rpx;
	margin-top: 450rpx;
}

