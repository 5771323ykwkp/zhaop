/* 轮播图样式 */
.home-swiper {
  height: 300rpx;
  width: 95%;
  margin: 5rpx auto;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 首页公告样式 */
.notice-content{
	position:static;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 功能按钮区域样式 */
.menu-container {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.menu-grid {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.menu-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.menu-icon-wrapper {
  width: 105rpx;
  height: 105rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.menu-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #333;
}

/* 内容区域通用样式 */
.section-container {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.section-more {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

/* 精选企业样式 */
.enterprise-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx 0;
}

.enterprise-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.enterprise-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  background-color: #f5f5f5;
}

.enterprise-name {
	font-size: 30rpx;
	font-weight: bold;
  color: #333;
  text-align: center;
}

.enterprise-info {
  flex: 1;
}

.enterprise-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-top: 8rpx;
}

/* 推荐岗位样式 */
.job-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.job-item {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
}

.job-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.job-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.job-salary {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.job-sub {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.job-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.job-tag {
  font-size: 22rpx;
  color: #ff8c00;
  background: rgba(255, 140, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

/* 最新公告样式 */
.notice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.notice-item {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.notice-content {
  flex: 1;
}

.notice-title {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.notice-time {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-top: 8rpx;
}

/* Added page style */
.index-page {
  background-color: #F5F5F5;
}

